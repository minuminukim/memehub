extends layout.pug

block content
  div.userpage-header
    h1.user-title= `${user.username}'s Memes`
      //-this anchor should take you to the user's followers page.
    a(href=`/users/${user.id}/followers` alt='followers')= "Followers"
    a(href= `/users/${user.id}/following` alt='following')= "Following"
    button.follow-button Follow
    form(action='/users/sign-out' method="post")
      button(type='submit') Sign Out
  hr.user-page
  div.userPosts
    ul
      each meme in memes
        h1.user-page= `${meme.dataValues.headline}`
        h2.user-page= `${meme.dataValues.caption}`
        img.user-meme(src=`${meme.dataValues.link}` alt='meme')
        div.likes-and-comments
          a(href=`/` role='button')= `Likes: ${meme.dataValues.Likes.length}`
          div Comments:
            each comment in meme.dataValues.Comments
              div.user-comment
                p= `${comment.dataValues.User.dataValues.username}: ${comment.dataValues.body}`
        p.posted-on= `Posted on ${meme.dataValues.updatedAt.toLocaleDateString("en-US")}`
        hr.bottom
        div.end-of-post
