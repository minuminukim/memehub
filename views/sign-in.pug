extends layout.pug

include utils.pug


block content
  .root
    div.spacing-more
    +validationErrorSummary(errors)
    p Please Sign In Before Proceeding
    form(action='/users/sign-in' method='post')
      input(type='hidden' name='_csrf' value=csrfToken)
      +field('Email: ', 'email', email)
      +field('Password: ', 'password', null, 'password')
      div.spacing-more
      button(type='submit') Sign In
      div.spacing-more
        p: a(href='/users/new') New User? Sign Up Here
