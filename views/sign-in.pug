extends layout.pug

include utils.pug

block content
  +validationErrorSummary(errors)
  p Please Sign Before Proceeding
  form(action='/users/sign-in' method='post')
    input(type='hidden' name='_csrf' value=csrfToken)
    +field('Email', 'email', email)
    +field('Password', 'password', null, 'password')
    div
      button(type='submit') Sign In
      a(href='/') Cancel
  div
    p: a(href='/users/new') New User? Sign Up Here
