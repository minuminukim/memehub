include layout.pug
include ./mixins/memes.pug

append head
  link(rel="stylesheet" href="/stylesheets/landing-page.css")
  link(rel="stylesheet" href="/stylesheets/components/trending-memes.css")
  script(src="/javascripts/scrollexport.js" type="module")

block content
  .landing-root
    header.landing-header
      nav.landing-nav
        .nav-left
          a(href="/"): img.nav-logo(src="/images/medium-logo-cropped.png")
          h1.nav-title: a(href="/") MemeHub
        .nav-right
          div.right-padding
            a.nav-link(href="/users/sign-in") Sign In
          div.right-padding
            a.nav-link(href="/users/sign-in") Try Demo
          div.right-padding
            div
              button(onclick="location.href='/users/new'") Get Started
      div
      .landing-header-main
        div.media
          h2.long MemeHub is a place to post, laugh, and connect
          h2.short Post, laugh, and connect
          div.header-main-spacing
            p.landing-caption It's easy and free to post your thinking on any topic and connect with millions of readers.
            div.header-main-spacing
              button.modal-button(onclick="location.href='/users/new'") Start Posting
            div.header-main-spacing
        div.right-side-header
          img.header(src="https://i.ibb.co/TYPs2CK/Screenshot-2021-12-19-212747.png")
    div.landing-hr
      div.margin-body
        .trending-titles
          div.trending-items
            div.width
              img.trending-logo(src="/images/trending.png")
              h2.trending-title TRENDING ON MEMEHUB
            div.width
        div.trending-content
          div
          .trending-memes-container
            each meme in trendingMemes
              +trendingMemeLoggedOut(`0${i++}`, meme.id, meme.link, meme.User.profilePicture, meme.userId, meme.User.username, meme.headline, meme.createdAt)
  div.meme-feed-spacing
    .landing-feed
      each meme in feedMemes
        +memeBlockLoggedOut(meme.User.profilePicture, meme.User.username, meme.link, meme.id, meme.userId, meme.headline, meme.createdAt, meme.caption)
