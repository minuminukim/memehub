include follows.pug

mixin recommended(userId, bio, username, followerId, image = "/images/user-profile.png")
  .recommended-block
    .rec-left
      a(href=`/users/${id}`): img.user-photo(src=image)
    .rec-mid
      a(class="recommended-username" href=`/users/${id}`) #{username}
      p.recommended-bio #{bio}
    .rec-right
      +followButton(userId, followerId, text)
