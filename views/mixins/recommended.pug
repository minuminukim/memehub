include follows.pug

mixin recommended(dev, followerId)
  .recommended-block
    .rec-left
      a(href=`/users/${dev.id}`): img.recommended-photo(src=dev.profilePicture)
    .rec-mid
      a(class="recommended-username" href=`/users/${dev.id}`) @#{dev.username}
      p.recommended-bio #{dev.biography}
    .rec-right
      if dev.isFollowing
        +followButton(dev.id, followerId, "Following", dev.followId, "unfollow-button")
      else
        +followButton(dev.id, followerId, "Follow", dev.followId, "follow-button")
