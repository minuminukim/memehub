extends layout.pug

block content
  div.delete-meme
    p Are you sure you want to delete this meme?
  div.delete-meme
    form(action=`/memes/${meme.id}/delete` method='post')
      input(type='hidden' name='_csrf' value=csrfToken)
      button(type='submit') Delete Meme
  div.delete-meme
    a(href=`/memes/${meme.id}` role='button') Cancel
  div.delete-meme
    ul
      h1.user-page= `${meme.headline}`
      h2.user-page= `${meme.caption}`
      img.user-meme(src=`${meme.link}` alt='meme')
